#!/bin/bash

set -e
cd $(dirname $0)
source remote-execution.sh
ssid=$1
psk=$2

if [ "$1" == "-h" -o ! -n "$ssid" ]; then
  echo "Usage: $0 <ssid> [<psk-password>]"
  echo
  echo "Connects the target Edison to the specified wifi network."
  exit 1
fi

echo
echo "Connecting to $ssid."
run_on_target target/wifi "$ssid" "$psk"
