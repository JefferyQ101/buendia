<xf:xforms xmlns:jr="http://openrosa.org/javarosa" xmlns:xf="http://www.w3.org/2002/xforms"
           xmlns:xsd="http://www.w3.org/2001/XMLSchema"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <xf:model id="openmrs_model">
    <xf:instance id="openmrs_model_instance">
      <form name="Weight observation" id="4" uuid="9e17ff6f-e3c8-4661-86d3-09a96169bedc" version="1"
          >
        <header>
          <enterer></enterer>
          <date_entered></date_entered>
          <session></session>
          <uid></uid>
        </header>
        <encounter>
          <encounter.encounter_datetime openmrs_attribute="encounter_datetime"
                                        openmrs_table="encounter">'today()'
          </encounter.encounter_datetime>
          <encounter.location_id openmrs_attribute="location_id"
                                 openmrs_table="encounter"></encounter.location_id>
          <encounter.provider_id openmrs_attribute="provider_id" openmrs_table="encounter"
                                 provider_id_type="PROVIDER.ID"></encounter.provider_id>
        </encounter>
        <obs openmrs_concept="1238^MEDICAL RECORD OBSERVATIONS^99DCT" openmrs_datatype="ZZ">
          <weight_kg openmrs_concept="5089^WEIGHT (KG)^99DCT" openmrs_datatype="NM">
            <date xsi:nil="true"></date>
            <time xsi:nil="true"></time>
            <value xsi:nil="true"></value>
          </weight_kg>
        </obs>
      </form>
    </xf:instance>
    <xf:bind constraint=". &amp;lt;= today()"
             id="encounter.encounter_datetime" nodeset="/form/encounter/encounter.encounter_datetime"
             required="true()"
             type="xsd:date" jr:constraintMsg="Encounter date cannot be after today"/>
    <xf:bind id="encounter.location_id" nodeset="/form/encounter/encounter.location_id"
             required="true()" type="xsd:int"/>
    <xf:bind id="encounter.provider_id" nodeset="/form/encounter/encounter.provider_id"
             required="true()" type="xsd:int"/>
    <xf:bind constraint=". &amp;gt;= 0.0 and . &amp;lt;= 250.0" id="weight_kg" nodeset="/form/obs/weight_kg/value"
             type="xsd:decimal"
             jr:constraintMsg="value should be between 0.0 and 250.0 inclusive"/>
    <xf:bind id="patient_relative" nodeset="/form/patient/patient_relative"/>
    <xf:bind id="patient_relative.person"
             nodeset="/form/patient/patient_relative/patient_relative.person"/>
    <xf:bind id="patient_relative.relationship"
             nodeset="/form/patient/patient_relative/patient_relative.relationship"/>
  </xf:model>
  <xf:group>
    <xf:label>Page1</xf:label>
    <xf:input bind="encounter.encounter_datetime">
      <xf:label>ENCOUNTER DATETIME</xf:label>
    </xf:input>
    <xf:select1 bind="encounter.location_id">
      <xf:label>LOCATION ID</xf:label>
      <xf:item>
        <xf:label>Unknown Location [1]</xf:label>
        <xf:value>1</xf:value>
      </xf:item>
    </xf:select1>
    <xf:select1 bind="encounter.provider_id">
      <xf:label>PROVIDER ID</xf:label>
      <xf:item>
        <xf:label>Ann Foo [100-1]</xf:label>
        <xf:value>1</xf:value>
      </xf:item>
      <xf:item>
        <xf:label>Nurse Bob [100-2]</xf:label>
        <xf:value>2</xf:value>
      </xf:item>
    </xf:select1>
    <xf:input bind="weight_kg">
      <xf:label>WEIGHT (KG)</xf:label>
      <xf:hint>Patient's weight in kilograms.</xf:hint>
    </xf:input>
    <xf:group>
      <xf:label>RELATIONSHIPS</xf:label>
      <xf:hint>Relationships that this patient has.</xf:hint>
      <xf:repeat bind="patient_relative">
        <xf:input bind="patient_relative.person">
          <xf:label>RELATIVE</xf:label>
        </xf:input>
        <xf:input bind="patient_relative.person">
          <xf:label>RELATIVE</xf:label>
        </xf:input>
        <xf:select1 bind="patient_relative.relationship">
          <xf:item>
            <xf:label>is Doctor [1]</xf:label>
            <xf:value>1A</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Patient [1]</xf:label>
            <xf:value>1B</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Sibling [2]</xf:label>
            <xf:value>2A</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Parent [3]</xf:label>
            <xf:value>3A</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Child [3]</xf:label>
            <xf:value>3B</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Aunt/Uncle [4]</xf:label>
            <xf:value>4A</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Niece/Nephew [4]</xf:label>
            <xf:value>4B</xf:value>
          </xf:item>
          <xf:label>RELATIONSHIP</xf:label>
        </xf:select1>
        <xf:select1 bind="patient_relative.relationship">
          <xf:item>
            <xf:label>is Doctor [1]</xf:label>
            <xf:value>1A</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Patient [1]</xf:label>
            <xf:value>1B</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Sibling [2]</xf:label>
            <xf:value>2A</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Parent [3]</xf:label>
            <xf:value>3A</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Child [3]</xf:label>
            <xf:value>3B</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Aunt/Uncle [4]</xf:label>
            <xf:value>4A</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>is Niece/Nephew [4]</xf:label>
            <xf:value>4B</xf:value>
          </xf:item>
          <xf:label>RELATIONSHIP</xf:label>
        </xf:select1>
      </xf:repeat>
    </xf:group>
  </xf:group>
</xf:xforms>