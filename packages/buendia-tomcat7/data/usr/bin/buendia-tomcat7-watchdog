#!/bin/bash

if [ -n "$(pidof -x buendia-update apt-get dpkg)" ]; then
    echo "Package update scripts are running; skipping check."
    exit 0
fi

if ! service tomcat7 status 2>&1; then
    echo "tomcat7 is not running, restarting..."
    if service tomcat7 restart; then
        echo "tomcat7 has been restarted."
    else
        echo "tomcat7 could not be restarted."
    fi
fi
