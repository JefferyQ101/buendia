#!/bin/bash

set -e; . /usr/share/buendia/utils.sh

if [ -n "$1" ]; then
    dpkg -s "$@"
else
    dpkg-query -f '${db:Status-Abbrev} ${Package;-20} ${Version;-15} ${Description;-39}\n' -W 'buendia-*'
fi

case "$PKGCLIENT_AUTOUPDATE" in
    ''|0|false|off|no)
        echo "PKGCLIENT_AUTOUPDATE is disabled."
        ;;

      *)
        echo "PKGCLIENT_AUTOUPDATE is enabled."
        ;;
esac
