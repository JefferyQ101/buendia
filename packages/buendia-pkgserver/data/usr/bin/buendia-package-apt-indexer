#!/bin/bash
# APT Indexer - Creates Release and Package indexes for a pool of .deb files
#  Debian packages are assumed to be located in /usr/share/buendia/packages

pushd /usr/share/buendia/packages
mkdir -p dists/stable/main/binary-all
apt-ftparchive --arch all packages . > dists/stable/main/binary-all/Packages
cat <<EOF > dists/stable/Release
Origin: Buendia
Label: Buendia Debian Packages
Suite: stable
Codename: stable
Architectures: all
Components: main
Description: Buendia Debian Packages
EOF
apt-ftparchive release dists/stable >> dists/stable/Release
popd
