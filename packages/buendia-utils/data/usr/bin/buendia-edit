#!/bin/bash

name=$1
if [ "$1" = "-h" -o -z "$1" ]; then
    echo "Usage: $0 <name>"
    echo
    echo "Edit a settings file in /usr/share/buendia/site."
    exit 1
fi

candidate="/usr/share/buendia/site/$name"
if [ -f "$candidate" ]; then
    file="$candidate"
else
    if [ -f "$name" ]; then
        file="$name"
    else
        echo "$candidate not found."
        exit 1
    fi
fi

editor=${EDITOR:-vi}
$editor $file
