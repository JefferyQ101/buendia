#!/bin/bash

set -e

case $1 in
    configure|abort-upgrade|abort-remove|abort-deconfigure)
        # After modifying /usr/share/buendia/site, re-apply all settings.
        shopt -s nullglob
        for $config in /usr/share/buendia/config.d/*; do
            $config
        done
        ;;

    *) exit 1
esac
