#!/bin/bash

if [ -n "$(pidof -x buendia-update apt-get dpkg)" ]; then
    echo "Package update scripts are running; skipping check."
    exit 0
fi

if ! service mysql status 2>&1; then
    echo "mysql is not running, restarting..."
    if service mysql restart; then
        echo "mysql has been restarted."
    else
        echo "mysql could not be restarted."
    fi
fi

