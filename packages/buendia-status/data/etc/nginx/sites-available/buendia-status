server {
    listen 9999;
    root /usr/share/buendia;
    index index.html;
    server_name _;

    location / {
        gzip off;
        fastcgi_pass unix:/var/run/fcgiwrap.socket;
        include /etc/nginx/fastcgi_params;
        root /usr/share/buendia;
        fastcgi_param SCRIPT_FILENAME /usr/share/buendia$fastcgi_script_name;
    }
}
