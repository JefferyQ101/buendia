#!/bin/bash

set -e; . /usr/share/buendia/utils.sh

case $1 in
    configure|abort-upgrade|abort-remove|abort-deconfigure)
        # Enable the status website
        ln -sf ../sites-available/buendia-status /etc/nginx/sites-enabled

        # Bring services back up
        service nginx start
        ;;

    *) exit 1
esac
