#!/bin/ash

set -e
ROOT=/home/root/debian  # must be on the /home filesystem
PATH=/usr/local/bin:$PATH

if [ -f /etc/buendia-base-installed ]; then
  echo "Buendia base system is installed."
  exit 0
fi

# Turn on wifi.
echo "Starting wifi."
wifi -
if ! ping -c 1 -w 1 debian.org; then
  sleep 10
  wifi -
  if ! ping -c 1 -w 1 debian.org; then
    sleep 20
    wifi -
    if ! ping -c 1 -w 1 debian.org; then
      echo 'Could not connect wifi.'
      exit 1
    fi
  fi
fi

# Install Debian under $ROOT using cdebootstrap.
rm -rf $ROOT
install-debian

# Install a .bashrc file in the Debian user root in the Debian chroot.
cat <<EOF >$ROOT/root/.bashrc

PATH=/usr/local/bin:$PATH
PS1='\[\033[33m\]\h(debian)[\!]\$\[\033[0m\] '
export LS_OPTIONS='--color=auto'
alias ls='ls $LS_OPTIONS'
alias ll='ls -l $LS_OPTIONS'
EOF

# Add a package repository.
cat /etc/buendia.sources.list >> $ROOT/etc/apt/sources.list

# Do the rest of the setup operations within Debian.
cat <<EOF | enter-debian
set -e

# Set time zone to UTC
echo UTC > /etc/timezone
dpkg-reconfigure -f noninteractive tzdata

# Update sources.
apt-get update

# When installing packages, install only the required dependencies.
echo 'APT::Install-Recommends "0";' > /etc/apt/apt.conf.d/01norecommend
echo 'APT::Install-Suggests "0";' >> /etc/apt/apt.conf.d/01norecommend

mkdir -p /usr/local/bin
EOF

echo "Buendia base system successfully installed."
touch /etc/buendia-base-installed
